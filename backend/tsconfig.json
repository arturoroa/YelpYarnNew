{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",    // Cambiado de ESNext a Node16
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["DOM", "ES2020"],
    "types": ["node", "puppeteer"]
  },
  "include": [
    "./**/*.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}